<%= render("layouts/errors", :object => @message) %>

<%= form_for(@message) do |f| %>
  <div class="form-group">
    <%= f.label :to %>
    <%= f.text_field :to %>
  </div>
  <div class="form-group">
    <%= f.label :deliver_phone %>
    <%= f.text_field :deliver_phone %>
  </div>
  <div class="form-group">
    <%= f.label :from %>
    <%= f.text_field :from %>
  </div>
  <div class="form-group">
    <%= f.label :send_phone %>
    <%= f.text_field :send_phone %>
  </div>
  <%= f.submit(:class => "btn btn-primary") %>
<% end %>
