<div id="new-contact">
  <h2>Add a new contact</h2>
  <%= form_for @contact do |f| %>
    <%= f.hidden_field :user_id, value: current_user.id %>
    <div class="form-group">
      <%= f.label :name %><br>
      <%= f.text_field :name, placeholder: "Enter name" %>
    </div>
    <div class="form-group">
      <%= f.label :number %><br>
      <%= f.text_field :number, placeholder: "8005551212" %>
    </div>
  <% end %>
</div>
